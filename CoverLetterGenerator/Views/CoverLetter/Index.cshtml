// Views/CoverLetter/Index.cshtml
@model CoverLetterApp.Models.CoverLetterRequest
@{
    ViewData["Title"] = "Generate Cover Letter";
}
<h2>Generate Cover Letter</h2>
<form asp-controller="CoverLetter" asp-action="Generate" method="post">
    <div class="form-group">
        <label asp-for="JobDescription"></label>
        <textarea asp-for="JobDescription" class="form-control" rows="6"></textarea>
    </div>
    <div class="form-group">
        <label asp-for="CVText"></label>
        <textarea asp-for="CVText" class="form-control" rows="6"></textarea>
    </div>
    <button type="submit" class="btn btn-primary">Generate</button>
</form>